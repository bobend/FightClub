@model FightClub.Models.Match
@{
    ViewBag.Title = "Replay";
}

<script>
var matchData = {
	user1: "@Model.User1",
	user2: "@Model.User2",
	result: @Model.Result,
	rounds: [
		{
			player1: "@Model.User1Move1",
			player2: "@Model.User2Move1"
		},
		{
			player1: "@Model.User1Move2",
			player2: "@Model.User2Move2"
		},
		{
			player1: "@Model.User1Move3",
			player2: "@Model.User2Move3"
		}
	]
};
</script>

<div class="container battle-replay">
    <header>
        <div class="player-name player-1">@Model.User1</div>
        <div class="versus">VS</div>
        <div class="player-name player-2">@Model.User2</div>
    </header>
    <div class="announcer">Fight!</div>
    <div class="winner"></div>
    <div class="field">
    	<div class="avatar player-1" data-state=""></div>
    	<div class="avatar player-2" data-state=""></div>
    </div>
</div>

<script src="/content/assets/dist/js/replay.js"></script>